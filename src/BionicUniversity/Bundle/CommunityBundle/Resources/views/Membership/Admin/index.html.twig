{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Membership list</h1>

    <table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Community</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('membership_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.getuser.getfirstname }} {{ entity.getuser.getlastname }}</td>
                <td>{{ entity.getcommunity.getname }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('membership_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('membership_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('membership_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
