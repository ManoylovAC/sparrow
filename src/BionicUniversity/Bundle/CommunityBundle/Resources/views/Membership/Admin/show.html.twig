{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Community</h1>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ entity.getuser.getfirstname }} {{ entity.getuser.getlastname }}</td>
            </tr>
            <tr>
                <th>Community</th>
                <td>{{ entity.getcommunity.getname }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('community') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('community_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
