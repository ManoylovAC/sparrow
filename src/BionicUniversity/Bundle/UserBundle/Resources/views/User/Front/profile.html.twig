{% extends "::front.html.twig" %}
    {% block heading_profile %}
        {{ entity.firstName }}
        {{ entity.lastName }}
    {% endblock heading_profile %}
    {% block profile %}
        <div class="row">
            <aside class=" col-md-3">
                {% if entity.avatar == false %}
                <form action="{{ oneup_uploader_endpoint('avatar') }}" class="dropzone square drop_avatar">
                    <div class="fallback">
                    <input name="file" type="file" multiple />
                    </div>
                </form>
                {% else %}
                    <img src="{{ asset('uploads/avatar/') }}{{ entity.avatar }}" class="avatar" alt="Your avatar">
                {% endif %}
            </aside>
            <section class="col-md-9" >
                <ul class="list">
                    <li class="list-item">Position: {{ app.security.token.user.position}}</li>
                    <li class="list-item">Gender: {{ app.security.token.user.gender}}</li>
                    <li class="list-item">Department: {{ app.security.token.user.department}}</li>
                </ul>
            </section>
        </div>
    {% endblock profile %}
    {% block heading_wall %}
        <h1>My blog</h1>
        <div>
            {{ form(form) }}
        </div>
        <div>
            <ul>
                {% for post_body in post %}
                    <div class="">
                        <li class="">{{ post_body.text }}</li>
                        {% if app.security.token.user == post_body.author %}
                            <a href="{{ path('delete_post', {'id': post_body.id, '_token': csrfToken}) }}">
                                Delete
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </ul>
        </div>
    {% endblock heading_wall %}
{% block javascripts %}
    <script type="text/javascript" src="{{  asset('vendor/dropzone/downloads/dropzone.js') }}"></script>
{% endblock javascripts %}

