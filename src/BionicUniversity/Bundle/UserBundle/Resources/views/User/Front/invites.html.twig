{% block invites %}
    <ul>
        {% for man in invites %}
            <div class="panel panel-danger communities_panel">
                <div class="panel-heading">
                    <li class="communities_list"><a href="{{ path('user_profile',{'id':man.getid}) }}"> Name: {{ man.getfirstname }}</a></li>
                </div>
                <div class="panel-body"><li class="communities_list">{{ man.getdepartment }}</li></div>
                <div class="btn btn-default"><a href="{{ path('user_confirm_friend',{ 'id': man.getid }) }}">Confirm</a></div>
            </div>
        {% endfor %}
    </ul>
{% endblock invites %}