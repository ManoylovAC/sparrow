{% extends "::front.html.twig" %}
{% import '_helpers.html.twig' as helpers %}
    {% block heading_wall %}
        <h1>My friends</h1>
        {% block friends %}
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#my_friends" role="tab" data-toggle="tab">My friends</a></li>
                <li><a href="#all" role="tab" data-toggle="tab">All people</a></li>
                <li><a href="#invites" role="tab" data-toggle="tab">Invites
                        {% if invites_count > 0 %}
                        <strong>({{ invites_count }})</strong>
                        {% endif %}
                    </a></li>
                <li><a href="#requests" role="tab" data-toggle="tab">Requests
                        {% if requests_count > 0 %}
                        ({{ requests_count }})
                    </a></li>
                        {% endif %}
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="my_friends">
                    {% for friend in my_friends %}
                        {{ helpers.user(friend) }}
                    {% else %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                No friends yet. You can try to search someone
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="tab-pane" id="all">
                    {% for friend in all_people %}
                        {{ helpers.user(friend) }}
                    {% else %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                No users exist yet. You are the first one!
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="tab-pane" id="invites">

                    {% for friend in invites %}
                        {{ helpers.user(friend) }}
                    {% else %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                No invites recieved yet!
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="tab-pane" id="requests">
                    {% for friend in requests %}
                        {{ helpers.user(friend) }}
                    {% else %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                No requests sent yet!
                            </div>
                        </div>
                </div>
                {% endfor %}



        {% endblock friends %}
    {% endblock heading_wall %}
{% block body %}
    {{ parent() }}
{% endblock body %}
